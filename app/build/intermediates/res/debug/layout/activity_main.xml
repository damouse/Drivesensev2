<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/root_view"
    android:keepScreenOn="true">
    
    <!-- Map-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/animation_layout"
        android:orientation="vertical"
        android:clickable="false"
        android:weightSum="1.0">

        <fragment android:name="edu.wisc.drivesense.controllers.fragments.PinMapFragment"
            android:id="@+id/map"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="0dp"  />

    </LinearLayout>
    <!--End Map-->


    <!--Slidein Table-->
    <LinearLayout
        android:orientation="vertical"
        android:clickable="false"
        android:id="@+id/slide_in_trips"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:weightSum="2">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray"/>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/progress_bar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:spb_sections_count="2"
            app:spb_color="#000"
            app:spb_speed="1.5"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="true"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            />

        <!--<com.squareup.timessquare.CalendarPickerView-->
            <!--android:id="@+id/calendar_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--/>-->

        <!-- The table that holds all the trips -->
        <fragment android:name="edu.wisc.drivesense.controllers.fragments.TripsListViewFragment"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/list"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"/>

    </LinearLayout>
    <!--End Slidin Table-->

    <!-- Buttons Holder -->
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:layout_alignParentTop="true">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button android:id="@+id/record"
                android:layout_height="65dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="65dip"
                android:background="@drawable/play"
                android:onClick="toggleRecord"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button android:id="@+id/settings"
                android:layout_height="65dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="65dip"
                android:background="@drawable/settings"
                android:onClick="settingsClick"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button android:id="@+id/trips"
                android:layout_height="50dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="65dip"
                android:background="@drawable/car"
                android:onClick="toggleDisplayTrips"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button android:id="@+id/loadLocal"
                android:layout_height="50dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="65dip"
                android:text="DEBUG"
                android:onClick="onLoadLocal"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <!-- End Buttons Holder -->


    <!-- Here to allow the two slideins to overlap -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <!-- The recording slidein -->
        <GridLayout
            android:id="@+id/slide_in"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:visibility="invisible"
            android:columnCount="1" >

            <edu.wisc.drivesense.views.OpenSansLightTextview
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:text="Trip Name"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="6dip"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <edu.wisc.drivesense.views.OpenSansLightTextview
                android:id="@+id/textview_name"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="0"
                android:text="Sample Trip Name"
                android:layout_marginRight="6dip"
                android:layout_marginTop="6dip"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <edu.wisc.drivesense.views.OpenSansLightTextview
                android:id="@+id/textview_duration"
                android:layout_column="0"
                android:layout_gravity="right|bottom"
                android:layout_row="0"
                android:layout_marginRight="6dip"
                android:layout_marginBottom="6dip"
                android:text="N seconds"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <edu.wisc.drivesense.views.OpenSansLightTextview
                android:layout_column="0"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="6dip"
                android:layout_marginBottom="6dip"
                android:layout_row="0"
                android:text="Duration"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </GridLayout><!-- End recording slidein -->

    </RelativeLayout>

</RelativeLayout>

