<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.wisc.drivesense" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- The following two permissions are not required to use Google Maps Android API v2, but are recommended. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Ubertesters library user-permisions -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Ubertesters library user-permisions -->


    <!-- Starts up on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- WiFiNotification -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Makes sure device can use opengles3 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light"
        tools:replace="icon" >

        <!-- <activity -->
        <!-- android:name=".controllers.MainActivity" -->
        <!-- android:label="@string/app_name" > -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->

        <activity
            android:name=".controllers.newUi.LandingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.PreferenceActivity"
            android:label="Settings"
            android:parentActivityName=".controllers.MainActivity" />

        <receiver android:name=".sensors.PowerListener" >
            <intent-filter>
                <action android:name="android.intent.action.CTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".controllers.BootStarterReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver" >
            <intent-filter>
                <action android:name="Intent.ACTION_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".sensors.WifiListener" >
            <intent-filter>
                <action android:name="android.net.wifi.supplicant.CONNECTION_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Sugar specific setup (the ORM library) -->
        <meta-data
            android:name="DATABASE"
            android:value="drivesense.db" />
        <meta-data
            android:name="VERSION"
            android:value="16" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="edu.wisc.drivesense.model" />
        <meta-data
            android:name="ubertesters_project_id"
            android:value="3380798e-d65b-11e3-a44d-22000ac44c54" />

        <service android:name=".businessLogic.BackgroundRecordingService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <!-- Note to other developers- Google Maps requires the signing key used to set up the app on your local computer. -->
        <!-- You will not be able to access the map on the app unless you use this key to create a Google Maps API key in the -->
        <!-- console. Ask Mickey for access to the dev account. -->


        <!-- Debug key: make active for local testing ON MAC -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCPvc4FCD8OWefkB4QpvMzcRDAItR9SPUQ" />

        <!-- Debug key: make active for local testing ON UBUNTU -->
        <!-- <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyBbItB5PPXvT6HLAbLuvdqlFoKDWViIyqQ"/> -->
        <activity
            android:name=".controllers.newUi.RecordingTripActivity"
            android:label="@string/title_activity_recording_trip" >
        </activity>
        <activity
            android:name=".controllers.newUi.TripViewerActivity"
            android:label="@string/title_activity_trip_viewer" >
        </activity>
    </application>

</manifest>
