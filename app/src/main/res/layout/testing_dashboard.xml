<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="State:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewState"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView"
        android:textAlignment="viewEnd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Inputs"
        android:id="@+id/textView3"
        android:layout_below="@+id/textViewState"
        android:layout_alignRight="@+id/textViewState"
        android:layout_alignEnd="@+id/textViewState" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered"
        android:id="@+id/checkBoxPower"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:checked="false"
        android:onClick="setPower" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Enabled"
        android:id="@+id/checkBoxGps"
        android:layout_below="@+id/checkBoxPower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:onClick="setGpsEnabled" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxAutomatic"
        android:layout_below="@+id/checkBoxGps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:text="Automatic Recording"
        android:onClick="setAutomaticRecording" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual GPS Trigger"
        android:id="@+id/checkBoxManualTrigger"
        android:layout_below="@+id/checkBoxAutomatic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:onClick="setManualTrigger" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic Unpowered"
        android:id="@+id/checkBoxAutomaticUnpowered"
        android:layout_below="@+id/checkBoxManualTrigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:onClick="setAutomaticUnpowered" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move GPS"
        android:id="@+id/checkBoxActiveGps"
        android:checked="false"
        android:layout_below="@+id/checkBoxAutomaticUnpowered"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setMovingGps" />

</RelativeLayout>