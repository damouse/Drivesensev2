    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".35"/>
	            
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight=".2"
    	android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <edu.wisc.drivesense.views.OpenSansLightTextview 
                android:layout_height="40dip"
                android:focusable="false"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="Record Trips Automatically"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <Button android:id="@+id/record"
                android:layout_height="40dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="40dip"
                android:background="@drawable/off"
                android:onClick="onRecordClick"
                />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button android:id="@+id/record_info"
            android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="40dip"
            android:background="@drawable/settings"
            android:onClick="onRecordInfoClick"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="40dip"
    	android:layout_weight=".2"
    	android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <edu.wisc.drivesense.views.OpenSansLightTextview 
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="Upload Trips Automatically"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
        <Button android:id="@+id/upload"
            android:layout_height="40dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="40dip"
                android:background="@drawable/off"
                android:onClick="onUploadClick"
                />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button android:id="@+id/upload_info"
            android:layout_height="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="40dip"
            android:background="@drawable/settings"
            android:onClick="onUploadInfoClick"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
    </LinearLayout>



</LinearLayout>