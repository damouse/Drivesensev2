<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white">
    
    <LinearLayout
       	    android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">
       	    
       	    <edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/title"
              android:padding="5dip"
              android:layout_height="40dip"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:layout_width="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"/>
       	    
       	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
            
        	<edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/trip_date"
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginRight="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="2.55 miles"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	</LinearLayout>

    <!--***********************-->
    <!--*** TOOLBAR LAYOUT ****-->
    <!--***********************-->

    <LinearLayout android:id="@+id/toolbar"
          android:layout_marginBottom="-230dip"
          android:visibility="gone"
          android:layout_height="230dip"
          android:layout_width="fill_parent"
          android:orientation="vertical">
       	
       	<LinearLayout
       	    android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">
       	    
       	    <edu.wisc.drivesense.views.OpenSansLightTextview 
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginLeft="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="Duration"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	    
       	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
            
        	<edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/trip_duration"
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginRight="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="2h 34m"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	</LinearLayout>
       	
       	<LinearLayout
       	    android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">
       	    
       	    <edu.wisc.drivesense.views.OpenSansLightTextview 
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginLeft="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="Distance"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	    
       	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
            
        	<edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/trip_distance"
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginRight="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="2.55 miles"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	</LinearLayout>
       	
       	<LinearLayout
       	    android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">
       	    
       	    <edu.wisc.drivesense.views.OpenSansLightTextview 
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginLeft="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="Score"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	    
       	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
            
        	<edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/trip_score"
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginRight="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:text="2.55 miles"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
       	</LinearLayout>
       	
       	<LinearLayout
       	    android:layout_height="40dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">
       	    
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
       	    
       	    <edu.wisc.drivesense.views.OpenSansLightTextview android:id="@+id/upload"
                android:layout_height="40dip"
                android:focusable="false"
                android:layout_marginLeft="6dip"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:text="This trip has not been uploaded"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" />
       	    
			<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1" />  
       	</LinearLayout>
       	
       	<LinearLayout
       	    android:layout_height="60dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <!--Facebook-->
       	    <View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1" />  
	            
       	    <Button android:id="@+id/facebook"
                android:layout_height="50dip"
                android:layout_width="50dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/facebook" />
       	    
       	    <!--<View-->
	            <!--android:layout_width="0dp"-->
	            <!--android:layout_height="0dp"-->
	            <!--android:layout_weight="1"/>-->
            <!--/Facebook-->


            <!--Twitter-->
        	<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1"/>  
	            
        	<Button android:id="@+id/twitter"
                android:layout_height="50dip"
                android:layout_width="50dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/twitter" />
        	
        	<View
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_weight="1" />
            <!--/twitter-->

            <!--Upload and Spinner-->
            <!-- Framelayout contains a spinner that sits, invisible, until an upload call comes -->
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="50dip"
                android:layout_width="50dip"  >

                <Button android:id="@+id/uploadButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/upload_circle" />

                <ProgressBar
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="invisible"/>

            </FrameLayout>
            <!--/Upload and Spinner-->

            <!--Delete-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button android:id="@+id/delete"
                android:layout_height="50dip"
                android:layout_width="50dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/off" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--/Delete-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>