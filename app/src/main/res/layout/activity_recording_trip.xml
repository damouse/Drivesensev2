<!-- Here to allow the two slideins to overlap -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <!-- The recording slidein -->
    <GridLayout
        android:id="@+id/slide_in"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="invisible"
        android:columnCount="1" >

        <edu.wisc.drivesense.views.OpenSansLightTextview
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Trip Name"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <edu.wisc.drivesense.views.OpenSansLightTextview
            android:id="@+id/textview_name"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:text="Sample Trip Name"
            android:layout_marginRight="6dip"
            android:layout_marginTop="6dip"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <edu.wisc.drivesense.views.OpenSansLightTextview
            android:id="@+id/textview_duration"
            android:layout_column="0"
            android:layout_gravity="right|bottom"
            android:layout_row="0"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="6dip"
            android:text="N seconds"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <edu.wisc.drivesense.views.OpenSansLightTextview
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="6dip"
            android:layout_marginBottom="6dip"
            android:layout_row="0"
            android:text="Duration"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </GridLayout><!-- End recording slidein -->
</RelativeLayout>
</RelativeLayout>

